{
  "github": {
    "release": false
  },
  "git": {
    "tag": false,
    "push": false,
    "commitMessage": "Release v${version}",
    "requireUpstream": false
  },
  "hooks": {
    "after:bump": "rm -rf ./dist && npm run prod:build",
    "after:release": "npm publish"
  },
  "npm": {
    "publish": false,
    "private": true
  }
}

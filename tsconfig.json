{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "tests",
    "node_modules",
    "./src/**/*.stories.tsx"
  ]
}

